{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "noEmitOnError": true,
    "rootDir": "src",
    "outDir": "./public/js",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
