{
  "compilerOptions": {
    "target": "ES2022",                  // instead of ES2017
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": "public/ts",
    "outDir": "public/js",
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": [
    "public/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
