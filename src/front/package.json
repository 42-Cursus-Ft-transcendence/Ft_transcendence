{
  "type": "module",
  "scripts": {
    "build:css": "postcss src/style.css -o public/styles.css",
    "watch:css": "postcss src/style.css -o public/styles.css --watch",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:ts\""
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "concurrently": "^9.2.0",
    "postcss-cli": "^11.0.1",
    "typescript": "^5.8.3"
  }
}
