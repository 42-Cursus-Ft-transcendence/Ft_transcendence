{
  "type": "module",
  "scripts": {
    "build:css": "postcss src/style.css -o public/style.css",
    "watch:css": "postcss src/style.css -o public/style.css --watch",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:ts\""
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "postcss": "^8.5.6",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "postcss-cli": "^11.0.1",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.11"
  }
}
